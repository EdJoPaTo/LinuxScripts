#!/usr/bin/env sh

# This file is meant to compatible with multiple shells, including: bash, fish, zsh

export PATH="$HOME/bin":"$HOME/.local/bin":"$HOME/.cargo/bin":"$PATH"

# Set executables
export CROSS_CONTAINER_ENGINE=podman
export EDITOR=nvim
export FZF_DEFAULT_COMMAND="rg --files"
export VISUAL=nvim

# Set arguments
export BAT_THEME=ansi
export DENO_FUTURE=1
export LESS="--RAW-CONTROL-CHARS --quit-if-one-screen --ignore-case"
export MEETING_PIXELMATRIX=espMatrix-etHorizontal:1337
export MINISERVE_INTERFACE=::1
export MQTTUI_BROKER=mqtt://etoPiHome3
export RIPGREP_CONFIG_PATH="$HOME/.config/ripgreprc"

# https://github.com/rust-lang/cargo/issues/13873
export CARGO_RESOLVER_INCOMPATIBLE_RUST_VERSIONS=fallback
