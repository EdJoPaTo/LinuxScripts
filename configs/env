#!/usr/bin/env sh

# This file is meant to compatible with multiple shells, including: bash, fish, zsh

# last one ends up being the first as its always prefixed
[ -d "/opt/homebrew/opt/gnu-time/libexec/gnubin" ] && export PATH="/opt/homebrew/opt/gnu-time/libexec/gnubin:$PATH"
[ -d "/opt/homebrew/opt/rustup/bin" ] && export PATH="/opt/homebrew/opt/rustup/bin:$PATH"
[ -d "/usr/local/opt/gnu-time/libexec/gnubin" ] && export PATH="/usr/local/opt/gnu-time/libexec/gnubin:$PATH"
[ -d "/usr/local/opt/rustup/bin" ] && export PATH="/usr/local/opt/rustup/bin:$PATH"
[ -d "$HOME/.deno/bin" ] && export PATH="$HOME/.deno/bin:$PATH"
[ -d "$HOME/go/bin" ] && export PATH="$HOME/go/bin:$PATH"
[ -d "$HOME/.cargo/bin" ] && export PATH="$HOME/.cargo/bin:$PATH"
[ -d "$HOME/.local/bin" ] && export PATH="$HOME/.local/bin:$PATH"

# Set executables
export CROSS_CONTAINER_ENGINE=podman
export EDITOR=nvim
export FZF_DEFAULT_COMMAND="rg --files"
export VISUAL=nvim

# Set arguments
export BAT_THEME=ansi
export HOMEBREW_CASK_OPTS="--no-quarantine"
export LESS="--RAW-CONTROL-CHARS --quit-if-one-screen --ignore-case"
export MEETING_PIXELMATRIX=espMatrix-etHorizontal:1337
export MINISERVE_INTERFACE=::1
export MQTTUI_BROKER=mqtt://etoPiHome3
export RIPGREP_CONFIG_PATH="$HOME/.config/ripgreprc"
