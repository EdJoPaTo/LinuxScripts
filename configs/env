#!/usr/bin/env sh

# This file is meant to compatible with multiple shells, including: bash, fish, zsh

export PATH="$PATH":"$HOME/bin":"$HOME/.local/bin":"$HOME/.cargo/bin"

# Set executables
export CROSS_CONTAINER_ENGINE=podman
export EDITOR=hx
export FZF_DEFAULT_COMMAND="rg --files"
export VISUAL=hx

# Set arguments
export BAT_THEME=ansi
export LESS="--RAW-CONTROL-CHARS --quit-if-one-screen --ignore-case"
export MEETING_PIXELMATRIX=espMatrix-etHorizontal:1337
export MQTTUI_BROKER=mqtt://etoPiHome3
