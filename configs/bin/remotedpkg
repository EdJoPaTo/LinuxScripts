#!/usr/bin/env bash
set -eu -o pipefail

# usage: remotedpkg server

# sends all *.deb files to the server and uses `sudo dpkg -i bla.deb` on them

server=$1

rsync \
	--copy-links --times \
	--compress --checksum \
	--info=progress2 \
	--rsync-path="mkdir -p /tmp/remotedpkg && rsync" \
	./*.deb "$server:/tmp/remotedpkg"

ssh -tt "$server" bash -c \
	"uptime && cd /tmp/remotedpkg && sudo bash -c 'set -eu -o pipefail && for p in *.deb; do dpkg --force-bad-verify -i \"\$p\"; done' && rm -rf /tmp/remotedpkg && uptime"
