{
	"diffEditor.wordWrap": "on",
	"editor.stickyScroll.enabled": true,
	"editor.wordWrap": "on",
	"editor.wrappingIndent": "indent",
	"explorer.confirmDragAndDrop": false,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"git.openRepositoryInParentFolders": "never",
	"git.suggestSmartCommit": false,
	"javascript.preferences.importModuleSpecifierEnding": "js",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"ltex.additionalRules.motherTongue": "de-DE",
	"platformio-ide.disablePIOHomeStartup": true,
	"prettier.useTabs": true,
	"redhat.telemetry.enabled": false,
	"rust-analyzer.assist.emitMustUse": true,
	"rust-analyzer.check.command": "clippy",
	"rust-analyzer.completion.privateEditable.enable": true,
	"rust-analyzer.imports.granularity.group": "module",
	"rust-analyzer.imports.prefix": "crate",
	"rust-analyzer.inlayHints.closureReturnTypeHints.enable": "always",
	"rust-analyzer.inlayHints.discriminantHints.enable": "always",
	"rust-analyzer.inlayHints.lifetimeElisionHints.enable": "skip_trivial",
	"rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": true,
	"scm.defaultViewMode": "tree",
	"terminal.external.linuxExec": "alacritty",
	"typescript.preferences.importModuleSpecifierEnding": "js",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"window.autoDetectColorScheme": true,
	"window.menuBarVisibility": "toggle",
	"window.restoreWindows": "none",
	"workbench.editor.limit.enabled": true,
	"workbench.editor.limit.perEditorGroup": true,
	"workbench.editor.limit.value": 6,
	"workbench.startupEditor": "none",
	"[json]": {
		"editor.defaultFormatter": "denoland.vscode-deno"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "denoland.vscode-deno"
	},
	"[typescript]": {
		"editor.defaultFormatter": "denoland.vscode-deno"
	},
	"C_Cpp.default.includePath": [
		"${workspaceFolder}/**",
		"~/Arduino/libraries/**",
		"~/.arduino15/packages/**"
	],
	"languageToolLinter.languageTool.ignoredWordsGlobal": [
		"alpine",
		"arch",
		"bash",
		"bigbluebutton",
		"cc-by-nd",
		"chroot",
		"copyleft",
		"deno",
		"dependencies",
		"editorconfig",
		"edjopato",
		"epub",
		"esphome",
		"foss",
		"gitignore",
		"grammy",
		"haw",
		"heic",
		"heif",
		"kvm",
		"loc",
		"mastodon",
		"mono",
		"mqttui",
		"mumble",
		"nan",
		"netcup",
		"nodemcu",
		"nuc",
		"pinephone",
		"pipewire",
		"pkgbuild",
		"podman",
		"rain-brainz",
		"relref",
		"semver",
		"systemd",
		"telegraf",
		"vserver",
		"websocket",
		"wikibase",
		"zulip"
	],
	"markdownlint.config": {
		"MD013": false,
		"MD024": false,
		"MD025": false
	},
	"rust-analyzer.check.extraArgs": [
		"--no-deps",
		"--",
		"-W",
		"clippy::pedantic",
		"-W",
		"clippy::nursery"
	],
	"diffEditor.ignoreTrimWhitespace": false
}
