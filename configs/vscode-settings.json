{
    "diffEditor.wordWrap": "on",
    "editor.stickyScroll.enabled": true,
    "editor.suggestSelection": "first",
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "explorer.confirmDragAndDrop": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.suggestSmartCommit": false,
    "javascript.preferences.importModuleSpecifierEnding": "js",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "ltex.additionalRules.motherTongue": "de-DE",
    "ltex.checkFrequency": "save",
    "platformio-ide.activateOnlyOnPlatformIOProject": true,
    "platformio-ide.disablePIOHomeStartup": true,
    "platformio-ide.useBuiltinPIOCore": false,
    "prettier.useTabs": true,
    "redhat.telemetry.enabled": false,
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.completion.privateEditable.enable": true,
    "rust-analyzer.imports.granularity.group": "module",
    "rust-analyzer.imports.prefix": "crate",
    "rust-analyzer.inlayHints.closureReturnTypeHints.enable": true,
    "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "always",
    "scm.defaultViewMode": "tree",
    "terminal.external.linuxExec": "alacritty",
    "typescript.preferences.importModuleSpecifierEnding": "js",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.autoDetectColorScheme": true,
    "window.restoreWindows": "none",
    "workbench.colorTheme": "Monokai",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 6,
    "workbench.preferredDarkColorTheme": "Monokai",
    "workbench.preferredLightColorTheme": "Visual Studio Light",
    "workbench.startupEditor": "none",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "~/Arduino/libraries/**",
        "~/.arduino15/packages/**"
    ],
    "languageToolLinter.languageTool.ignoredWordsGlobal": [
        "alpine",
        "arch",
        "bash",
        "bigbluebutton",
        "cc-by-nd",
        "chroot",
        "copyleft",
        "deno",
        "dependencies",
        "editorconfig",
        "edjopato",
        "epub",
        "esphome",
        "foss",
        "gitignore",
        "grammy",
        "haw",
        "heic",
        "heif",
        "kvm",
        "loc",
        "mastodon",
        "mono",
        "mqttui",
        "mumble",
        "nan",
        "netcup",
        "nodemcu",
        "nuc",
        "pinephone",
        "pipewire",
        "pkgbuild",
        "podman",
        "rain-brainz",
        "relref",
        "semver",
        "systemd",
        "telegraf",
        "vserver",
        "websocket",
        "wikibase",
        "zulip"
    ],
    "markdownlint.config": {
        "MD013": false,
        "MD024": false,
        "MD025": false
    },
    "rust-analyzer.check.extraArgs": [
        "--no-deps",
        "--",
        "-W",
        "clippy::pedantic",
        "-W",
        "clippy::nursery"
    ],
    "[typescript]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "diffEditor.ignoreTrimWhitespace": false
}
